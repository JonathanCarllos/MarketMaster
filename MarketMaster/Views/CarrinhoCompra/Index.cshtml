@model CarrinhoCompraViewModel

@{
    ViewData["Title"] = "Produtos";
}

<div class="container">
    <div class="row">
    <h3>Carrinho de Compra</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoAddCompra.carrinhoCompras)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Produto</td>
                        <td class="text-center">@item.Produto.Preco.ToString("c")</td>
                        <td class="text-center">
                            @((item.Quantidade * item.Produto.Preco).ToString("c"))
                        </td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoveItemDoCarrinho"
                               asp-route-produtoId="@item.Produto.Id" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                        
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.CarrinhoTotal.ToString("c")
                    </td>
                </tr> 
            </tfoot>
        </table>
        <div class="btn-group">
            <button type="button" asp-controller="Pedido" asp-action="Checkout" class="btn btn-warning">Encerrar Pedido</button>
            <button type="button" asp-controller="Produtos" asp-action="List" class="btn btn-success">Continuar Comprando</button>
        </div>
    </div>
</div>