@model Produto

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="card h-100">
        <div class="card-body p-4">
            <p><img src="@Model.ImagemUrl" class="img-fluid"></p>
            <div class="text-center">  
                <h4 class="text-center">
                <a asp-controller="Produtos" asp-action="Details" asp-route-Id="@Model.Id">
                @Model.Nome
                </a></h4>
                <h6 class="text-center">@Model.Marca</h6>                
                <h5 class="text-center">Preço : @Model.Preco.ToString("c")</h5>
            </div>
            <div class="text-center">
                <p class="button">
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionandoNoCarrinho" asp-route-ProdutoId="@Model.Id">
                        Adicionar ao Carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>