@model Produto

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="card h-100">
        <div class="card-body p-4">
            <p><img src="@Model.ImagemUrl" class="img-fluid"></p>
            <div class="text-center">
                <!-- Product name-->
                <h4 class="text-center">@Model.Nome</h4>
                <h6 class="text-center">@Model.Marca</h6>
                <!-- Product price-->
                <h5 class="text-center">Preço : @Model.Preco.ToString("c")</h5>
            </div>
        </div>
    </div>
</div>