@model Produto

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselCard" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.ImagemThumblenailUrl" class="img-fluid" alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.ImagemUrl" class="img-fluid"  alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                        <img src="image3.jpg" class="img-fluid" alt="Slide 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselCard" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselCard" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card-body">
                <h2 class="card-title">@Model.Nome</h2>
                <h5>@Model.Marca</h5>
                <p class="card-text" style="text-align:justify">@Model.Descricao</p>
                <p>Preço: @Model.Preco.ToString("c")</p>                
                <p class="button">
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItem" asp-route-ProdutoId="@Model.Id">
                        Adicionar ao Carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
