@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "ROLES";
}
<br />
<div class="text-center mb-3">
    <h3>Nível de acesso</h3>
</div>

<p>
    <a asp-action="Create" class="btn btn-secondary">
        <i class="fa-solid fa-plus"></i> Criar Role
    </a>
</p>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="Admin" asp-action="Update" asp-route-id="@role.Id" title="Editar Role">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" title="Deletar Role" onclick="return confirm('Tem certeza que deseja excluir esta role?');">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
