@model IEnumerable<MarketMaster.Models.Pedido>
<br />
<div class="text-center">
    <h2>Pedidos Por Período</h2>
</div>

<nav class="navbar navbar-light bg-light mb-3">
    <div class="container-fluid">
        <form class="form-inline">
            <div class="form-group mr-3">
                <label for="minDate" class="mr-2">Data Inicial</label>
                <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
            </div>
            <div class="form-group mr-3">
                <label for="maxDate" class="mr-2">Data Final</label>
                <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
            </div>
            <br />
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Total de Pedidos: @Model.Count()</h4>
        <h5>Total de Produtos nos Pedidos: @Model.Sum(obj => obj.TotalItensPedido)</h5>
        <h5>Valor Total dos Pedidos: @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PedidoId)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoTotal)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalItensPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PedidoId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedidoTotal)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalItensPedido)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedidoEntregueEm)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
