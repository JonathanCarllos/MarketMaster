@model IEnumerable<IdentityUser>
<br />
<div class="text-center mb-3">
    <h3>Usuários</h3>
</div>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" asp-area=""
       class="btn btn-primary mb-3">
        <i class="fa-solid fa-plus"></i> Novo Usuário
    </a>

    @foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>ID do Usuário:</strong> @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="fa-solid fa-trash"></i> Excluir
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Não existem usuários
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Clique no botão abaixo para criar um usuário
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-area="" asp-action="Register">
                <i class="fa-solid fa-plus"></i> Novo Usuário
            </a>
        </div>
    </div>
}
