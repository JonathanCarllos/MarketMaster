@model MarketMaster.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="text-center">
    <h2 class="mb-4">Detalhes da Categoria</h2>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Informações da Categoria</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                <strong>Nome</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.Nome
            </dd>
            <dt class="col-sm-2">
                <strong>Descrição</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.Descricao
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
        <i class="fa-solid fa-edit"></i> Editar
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Voltar para Lista
    </a>
</div>
