@model MarketMaster.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}
<div class="text-center">
    <h2 class="mb-4">Atualizar Cadastro</h2>
</div>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" /> <!-- Assumindo que há um campo Id no modelo para identificar a categoria -->
    <div class="form-group mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
        <div class="invalid-feedback">
            Por favor, insira o nome da categoria.
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" placeholder="Descreva a categoria" rows="4" required></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
        <div class="invalid-feedback">
            Por favor, insira a descrição da categoria.
        </div>
    </div>
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fa-solid fa-floppy-disk"></i> Salvar
        </button>
    </div>
</form>
